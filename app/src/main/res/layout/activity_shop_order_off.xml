                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="15dp"
                    android:drawablePadding="10dp"
                    android:text="微信支付"
                    android:textColor="@color/color_black_333333"
                    android:textSize="@dimen/sp_12" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:layout_below="@+id/ll_pay_type"
                android:layout_marginLeft="@dimen/dp13"
                android:layout_marginTop="@dimen/dp10"
                android:layout_marginRight="@dimen/dp13"
                android:background="@drawable/bg_round_color_white">

                <RelativeLayout
                    android:id="@+id/ll_pay_money"
                    android:layout_width="65dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/id_pay_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="9dp"
                        android:text="商品金额"
                        android:textColor="@color/color_black_333333"
                        android:textSize="@dimen/sp_14" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_pay_money"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:text="￥20.00"
                    android:textColor="@color/color_FF5424"
                    android:textSize="@dimen/sp_12" />

                <RelativeLayout
                    android:id="@+id/ll_address"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_pay_money"
                    android:layout_marginLeft="10dp">

                    <TextView
                        android:id="@+id/id_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:text="运费"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/sp_12" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_pay_money"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:text="免运费"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/sp_12" />

                <RelativeLayout
                    android:id="@+id/ll_deduec"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_address"
                    android:layout_marginLeft="10dp">

                    <TextView
                        android:id="@+id/id_deduc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="5dp"
                        android:text="优惠抵扣"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/sp_12" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/id_disc_money2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_address"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:text="-￥0.00"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/sp_12" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_deduec"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/tv_id_num2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_toLeftOf="@+id/tv_heji"
                        android:gravity="center"
                        android:text="共1件,"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/tv_heji"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_toLeftOf="@+id/tv_to_money"
                        android:gravity="center"
                        android:text="小计："
                        android:textColor="@color/color_black_333333"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:id="@+id/tv_to_money"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="￥15.00"
                        android:textColor="@color/color_FF5424"
                        android:textSize="@dimen/text_size_15" />
                </RelativeLayout>
            </RelativeLayout>


        </RelativeLayout>
