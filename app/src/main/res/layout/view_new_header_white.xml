<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rela_header_title"
    style="@style/view_header_title"
    android:background="@color/white">
    <ImageButton
        android:id="@+id/btn_exit"
        android:src="@drawable/gallery_back"
        android:layout_alignParentBottom="true"
        style="@style/btn_login_exit"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/text_cancel"
        style="@style/text_small_1_white"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_alignParentBottom="true"
        android:text="@string/cancel"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/text_header_title"
        style="@style/text_header_title"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true">
        <ImageButton
            android:id="@+id/btn_collect"
            android:src="@mipmap/img_collect_un"
            android:visibility="gone"
            style="@style/btn_login_exit" />
        <ImageButton
            android:id="@+id/btn_share"
            android:src="@mipmap/img_share"
            android:visibility="gone"
            style="@style/btn_login_exit" />
        <TextView
            android:id="@+id/text_header_right"
            style="@style/text_small_1_yellow_login"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:textColor="@color/color_f5455e"
            android:textSize="@dimen/text_size_17"
            android:visibility="gone"/>
    </LinearLayout>
</RelativeLayout>
