                        android:text="明细"
                        android:textColor="@color/color_black_333333"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/id_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="35dp"
                        android:layout_toRightOf="@+id/img_photo"
                        android:text="100"
                        android:visibility="gone"
                        android:textColor="@color/color_black_333333"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/id_sc_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="37dp"
                        android:layout_toRightOf="@+id/id_money"
                        android:text="160"
                        android:visibility="gone"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/id_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="36dp"
                        android:layout_toRightOf="@+id/id_money"
                        android:text=""
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/id_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="15dp"
                        android:text="x1"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/sp_12" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rr_disco"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp">


                    <TextView
                        android:id="@+id/id_money1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/dp20"
                        android:text="使用优惠"
                        android:textColor="@color/color_black_333333"
                        android:textSize="@dimen/sp_12" />


                    <TextView
                        android:id="@+id/id_end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="15dp"
                        android:text=">"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/id_disc_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@+id/id_end"
                        android:text="-￥0.00"
                        android:textColor="@color/color_FF5424"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/id_disc_explan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="@dimen/dp5"
                        android:layout_toLeftOf="@+id/id_disc_money"
                        android:text="新人优惠券"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/sp_12"
